---
interface Props {
  locale?: string;
}

const { locale = "es" } = Astro.props;

const translations = await import(`../locales/${locale}.json`);
const t = translations.default;

const pillars = [
  {
    number: t.brochure.pillars.pillar1.number,
    title: t.brochure.pillars.pillar1.title,
    description: t.brochure.pillars.pillar1.description,
    examples: t.brochure.pillars.pillar1.examples,
    image: "/assets/img/headset-4.webp",
    accentColor: "#3b82f6",
  },
  {
    number: t.brochure.pillars.pillar2.number,
    title: t.brochure.pillars.pillar2.title,
    description: t.brochure.pillars.pillar2.description,
    examples: t.brochure.pillars.pillar2.examples,
    image: "/assets/img/headset-3.webp",
    accentColor: "#a855f7",
  },
  {
    number: t.brochure.pillars.pillar3.number,
    title: t.brochure.pillars.pillar3.title,
    description: t.brochure.pillars.pillar3.description,
    examples: t.brochure.pillars.pillar3.examples,
    image: "/assets/img/headset-1.webp",
    accentColor: "#ec4899",
  },
  {
    number: t.brochure.pillars.pillar4.number,
    title: t.brochure.pillars.pillar4.title,
    description: t.brochure.pillars.pillar4.description,
    examples: t.brochure.pillars.pillar4.examples,
    image: "/assets/img/headset-2.webp",
    accentColor: "#10b981",
  },
];
---

<section class="pillars" id="pillars-section">
  <div class="pillars-container">
    <div class="section-header">
      <h2 class="reveal-text" data-t="brochure.pillars.sectionTitle">
        {t.brochure.pillars.sectionTitle}
      </h2>
      <div class="header-line"></div>
    </div>

    <div class="pillars-grid">
      {
        pillars.map((pillar, index) => (
          <div class="pillar-card" data-pillar={index}>
            <span class="pillar-number">{pillar.number}</span>
            <h3
              class="pillar-title"
              data-t={`brochure.pillars.pillar${index + 1}.title`}
            >
              {pillar.title}
            </h3>
            <p
              class="pillar-description"
              data-t={`brochure.pillars.pillar${index + 1}.description`}
            >
              {pillar.description}
            </p>
            <p
              class="pillar-examples"
              data-t={`brochure.pillars.pillar${index + 1}.examples`}
            >
              {pillar.examples}
            </p>
            <div class="pillar-image">
              <img src={pillar.image} alt={pillar.title} />
            </div>
            <div
              class="card-bg"
              style={`background: linear-gradient(135deg, ${pillar.accentColor} 0%, ${index === 0 ? "#06b6d4" : index === 1 ? "#ec4899" : "#ef4444"} 100%)`}
            />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .pillars {
    position: relative;
    width: 100%;
    background-color: #111111;
    padding: 15vh 5vw;
    overflow: hidden;
  }

  .pillars-container {
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
  }

  .section-header {
    margin-bottom: 8vh;
    text-align: left;
  }

  .section-header h2 {
    font-size: clamp(3rem, 8vw, 10rem);
    color: #ffffff;
    font-weight: 800;
    line-height: 0.9;
    text-transform: uppercase;
    margin-bottom: 40px;
    font-family: "Inter", system-ui, sans-serif;
    letter-spacing: -0.04em;
  }

  .header-line {
    width: 0;
    height: 4px;
    background: linear-gradient(90deg, #3b82f6 0%, #a855f7 100%);
    margin-bottom: 30px;
  }

  .pillars-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1px;
    background-color: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .pillar-card {
    position: relative;
    min-height: 650px;
    padding: 40px;
    background-color: #0a0a0a;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    cursor: pointer;
  }

  .card-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transform: scaleY(0);
    transform-origin: bottom;
    transition: transform 0.7s cubic-bezier(0.19, 1, 0.22, 1);
    z-index: 1;
  }

  .pillar-card:hover .card-bg {
    transform: scaleY(1);
  }

  .pillar-number {
    font-family: "Geist Mono", "Fira Code", monospace;
    font-size: 1rem;
    font-weight: 500;
    position: relative;
    z-index: 2;
    transition: color 0.4s ease;
  }

  .pillar-card[data-pillar="0"] .pillar-number {
    color: #3b82f6;
  }

  .pillar-card[data-pillar="1"] .pillar-number {
    color: #a855f7;
  }

  .pillar-card[data-pillar="2"] .pillar-number {
    color: #ec4899;
  }

  .pillar-card[data-pillar="3"] .pillar-number {
    color: #10b981;
  }

  .pillar-card:hover .pillar-number {
    color: #ffffff;
  }

  .pillar-title {
    font-size: clamp(1.3rem, 1.8vw, 1.8rem);
    color: #ffffff;
    font-weight: 700;
    text-transform: uppercase;
    margin: 20px 0 15px;
    position: relative;
    z-index: 2;
    transition: color 0.4s ease;
    line-height: 1.3;
  }

  .pillar-description {
    font-size: clamp(0.95rem, 1.2vw, 1.1rem);
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
    margin-bottom: 1rem;
    position: relative;
    z-index: 2;
    transition: color 0.4s ease;
  }

  .pillar-examples {
    font-size: clamp(0.85rem, 1vw, 0.95rem);
    color: rgba(255, 255, 255, 0.5);
    line-height: 1.5;
    margin-bottom: 1.5rem;
    font-style: italic;
    position: relative;
    z-index: 2;
    transition: color 0.4s ease;
  }

  .pillar-card:hover .pillar-description,
  .pillar-card:hover .pillar-examples {
    color: rgba(255, 255, 255, 0.9);
  }

  .pillar-image {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 40%;
    overflow: hidden;
    z-index: 0;
  }

  .pillar-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.5;
    transition: all 0.6s ease;
  }

  .pillar-card:hover .pillar-image img {
    opacity: 0.2;
    transform: scale(1.05);
  }

  @media (max-width: 1024px) {
    .pillars-grid {
      grid-template-columns: 1fr;
    }

    .pillar-card {
      min-height: 450px;
    }
  }

  @media (max-width: 768px) {
    .pillars {
      padding: 10vh 5vw;
    }

    .section-header h2 {
      font-size: 2.5rem;
    }

    .pillar-card {
      padding: 30px;
      min-height: 500px;
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    const section = document.querySelector(".pillars");
    if (!section) return;

    const header = section.querySelector(".section-header h2");
    const headerLine = section.querySelector(".header-line");
    const cards = section.querySelectorAll(".pillar-card");

    gsap.set(header, { y: 100, opacity: 0 });
    gsap.set(headerLine, { width: 0 });
    gsap.set(cards, { y: 80, opacity: 0 });

    const tl = gsap.timeline({
      scrollTrigger: {
        trigger: section,
        start: "top 80%",
        toggleActions: "play none none reverse",
      },
    });

    tl.to(header, {
      y: 0,
      opacity: 1,
      duration: 1.2,
      ease: "expo.out",
    })
      .to(
        headerLine,
        {
          width: "200px",
          duration: 1.5,
          ease: "power4.inOut",
        },
        "-=0.8",
      )
      .to(
        cards,
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
          stagger: 0.15,
          ease: "power3.out",
        },
        "-=0.5",
      );
  });
</script>
