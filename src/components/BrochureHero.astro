---
interface Props {
  locale?: string;
}

const { locale = "es" } = Astro.props;

const translations = await import(`../locales/${locale}.json`);
const t = translations.default;
---

<section class="brochure-hero" id="brochure-hero-section">
  {/* Large behind text with glow */}
  <div class="behind-text">
    <h1>
      <span>THIRD</span>
      <span>STUDIO</span>
    </h1>
  </div>

  <div class="brochure-hero-container">
    <div class="tagline-section">
      <h1 class="tagline" data-t="brochure.hero.tagline">
        {t.brochure.hero.tagline}
      </h1>
    </div>
  </div>
</section>

<style>
  .brochure-hero {
    position: relative;
    width: 100%;
    min-height: 100vh;
    background-color: #0a0a0a;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 15vh 5vw 10vh;
  }

  .behind-text {
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 0;
    text-align: center;
    width: 100%;
    pointer-events: none;
  }

  .behind-text h1 {
    font-size: 14vw;
    color: transparent;
    -webkit-text-stroke: 1px rgba(249, 100, 191, 0.3);
    font-weight: 900;
    line-height: 0.8;
    opacity: 0;
    letter-spacing: -0.05em;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: -5vh;
    font-family: "Inter", system-ui, sans-serif;
    text-transform: uppercase;
  }

  .brochure-hero-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
    width: 100%;
    max-width: 1600px;
    text-align: center;
    padding: 0 20px;
  }

  .tagline-section {
    position: relative;
  }

  .tagline {
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.2;
    text-transform: uppercase;
    font-family: "Inter", system-ui, sans-serif;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #a855f7 0%, #ec4899 50%, #3b82f6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Tablet adjustments */
  @media (max-width: 1024px) {
    .brochure-hero {
      min-height: 65vh;
      padding: 14vh 5vw 9vh;
    }

    .behind-text h1 {
      font-size: 16vw;
    }

    .tagline {
      font-size: clamp(1.75rem, 4.5vw, 3.5rem);
    }
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .brochure-hero {
      min-height: 100vh;
      min-height: 100dvh; /* Dynamic viewport height for mobile browsers */
      padding: 20vh 5vw 10vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .behind-text h1 {
      font-size: 20vw;
      line-height: 0.75;
      margin-top: -5vh;
    }

    .brochure-hero-container {
      padding: 0 24px;
      max-width: 100%;
      top: 65%;
      transform: translate(-50%, -50%);
    }

    .tagline {
      font-size: clamp(1.5rem, 6vw, 2.5rem);
      line-height: 1.3;
      letter-spacing: -0.01em;
      padding: 0 10px;
    }
  }

  /* Small mobile devices */
  @media (max-width: 480px) {
    .brochure-hero {
      padding: 18vh 4vw 8vh;
    }

    .behind-text h1 {
      font-size: 22vw;
    }

    .tagline {
      font-size: clamp(1.25rem, 7vw, 2rem);
      line-height: 1.35;
      padding: 0 8px;
    }

    .brochure-hero-container {
      padding: 0 16px;
      top: 68%;
    }
  }

  /* Landscape mobile orientation */
  @media (max-width: 768px) and (orientation: landscape) {
    .brochure-hero {
      min-height: 100vh;
      padding: 15vh 5vw 8vh;
    }

    .behind-text h1 {
      font-size: 16vw;
    }

    .tagline {
      font-size: clamp(1.25rem, 4vw, 2rem);
    }
  }
</style>

<script>
  import { gsap } from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    const behindText = document.querySelector(".behind-text h1");
    const logo = document.querySelector(".logo-image");
    const tagline = document.querySelector(".tagline");

    if (behindText) {
      gsap.fromTo(
        behindText,
        { opacity: 0, scale: 0.9 },
        { opacity: 1, scale: 1, duration: 1.5, ease: "expo.out" },
      );
    }

    if (logo) {
      gsap.fromTo(
        logo,
        { opacity: 0, scale: 0.8 },
        {
          opacity: 1,
          scale: 1,
          duration: 1,
          delay: 0.3,
          ease: "back.out(1.7)",
        },
      );
    }

    if (tagline) {
      gsap.fromTo(
        tagline,
        { opacity: 0, y: 30 },
        { opacity: 1, y: 0, duration: 1, delay: 0.5, ease: "power3.out" },
      );
    }
  });
</script>
