---
interface Props {
  locale?: string;
}

const { locale = "es" } = Astro.props;

// Import translations
const translations = await import(`../locales/${locale}.json`);
const t = translations.default;
---

<section id="hero-section" class="hero">
  {/* Logo in corner */}
  <div class="logo-corner">
    <img src="/assets/img/logo.webp" alt="Third Studio" />
  </div>

  {/* Large behind text */}
  <div class="behind-text">
    <h1>
      <span>THIRD</span>
      <span>STUDIO</span>
    </h1>
  </div>

  {/* Main content */}
  <div class="header">
    <div class="line">
      <h1 id="hero-headline" data-t="hero.headline">{t.hero.headline}</h1>
    </div>
    <div class="line">
      <p id="hero-subheadline" data-t="hero.subheadline">
        {t.hero.subheadline}
      </p>
    </div>
    <div class="line">
      <button
        id="hero-cta"
        data-t="hero.cta"
        class="cta-btn"
        onclick="document.getElementById('contact-section')?.scrollIntoView({behavior: 'smooth', block: 'start'})"
      >
        {t.hero.cta}
      </button>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    min-height: 100vh;
    background-color: #0a0a0a;
    overflow: hidden;
    display: flex;
    align-items: flex-end;
  }

  .behind-text {
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 0;
    text-align: center;
    width: 100%;
    pointer-events: none;
  }

  .behind-text h1 {
    font-size: 14vw;
    color: transparent;
    -webkit-text-stroke: 1px rgba(249, 100, 191, 0.3);
    font-weight: 900;
    line-height: 0.8;
    opacity: 0;
    letter-spacing: -0.05em;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: -5vh;
    font-family: "Inter", system-ui, sans-serif;
    text-transform: uppercase;
  }

  .logo-corner {
    position: absolute;
    top: 10%;
    right: 5%;
    z-index: 10;
    width: 120px;
    opacity: 0;
    transform: scale(0.8);
  }

  .logo-corner img {
    width: 100%;
    height: auto;
  }

  .header {
    position: relative;
    bottom: 10%;
    left: 5%;
    width: auto;
    max-width: 900px;
    height: auto;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 2em;
    z-index: 10;
    padding: 0 5% 10% 5%;
  }

  .header h1 {
    text-align: left;
    font-size: clamp(2.5rem, 5vw, 5rem);
    color: #ffffff;
    font-weight: 800;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: -0.03em;
    opacity: 0;
    transform: translateY(50px);
  }

  .header p {
    text-align: left;
    color: rgba(255, 255, 255, 0.7);
    font-size: clamp(1rem, 1.5vw, 1.5rem);
    line-height: 1.5;
    max-width: 600px;
    opacity: 0;
    transform: translateY(30px);
  }

  .cta-btn {
    background: transparent;
    border: 2px solid #9333ea;
    color: #ffffff;
    padding: 1em 2em;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    opacity: 0;
    transform: translateY(30px);
    transition: color 0.4s ease;
  }

  .cta-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #9333ea 0%, #ec4899 100%);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.4s cubic-bezier(0.19, 1, 0.22, 1);
    z-index: -1;
  }

  .cta-btn:hover::before {
    transform: scaleX(1);
    transform-origin: left;
  }

  .cta-btn:hover {
    color: #ffffff;
  }

  /* 16:10 aspect ratio adjustments for desktop - using more specific ratio range */
  @media (min-width: 901px) and (min-aspect-ratio: 1.59/1) and (max-aspect-ratio: 1.61/1) {
    .header h1 {
      font-size: clamp(2rem, 4vw, 4rem) !important;
    }

    .header p {
      font-size: clamp(0.85rem, 1.2vw, 1.2rem) !important;
      max-width: 550px;
    }
  }

  /* Alternative: Target common 16:10 resolutions directly */
  @media (min-width: 1280px) and (max-width: 1920px) and (min-height: 800px) and (max-height: 1200px) {
    .header h1 {
      font-size: clamp(2rem, 4vw, 4rem) !important;
    }

    .header p {
      font-size: clamp(0.85rem, 1.2vw, 1.2rem) !important;
      max-width: 550px;
    }
  }

  @media (max-width: 900px) {
    .hero {
      height: 100dvh;
      min-height: 100dvh;
    }

    .behind-text {
      top: 42%;
    }

    .behind-text h1 {
      font-size: 28vw;
      line-height: 0.85;
      margin-top: 0;
      -webkit-text-stroke: 0.5px rgba(249, 100, 191, 0.25);
    }

    .logo-corner {
      width: 80px;
      top: 100px;
      right: 5%;
    }

    .header {
      bottom: 8%;
      left: 0;
      right: 0;
      padding: 0 5% 12% 5%;
      gap: 1.5em;
    }

    .header h1 {
      font-size: 2rem;
    }

    .header p {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .behind-text {
      top: 40%;
    }

    .behind-text h1 {
      font-size: 26vw;
      -webkit-text-stroke: 0.5px rgba(249, 100, 191, 0.2);
    }

    .logo-corner {
      width: 70px;
      top: 90px;
    }

    .header {
      bottom: 10%;
      padding: 0 5% 10% 5%;
      gap: 1.2em;
    }

    .header h1 {
      font-size: 1.75rem;
    }

    .header p {
      font-size: 0.95rem;
    }
  }

  @media (max-width: 375px) {
    .behind-text h1 {
      font-size: 24vw;
    }

    .header {
      padding: 0 5% 8% 5%;
    }
  }
</style>

<script>
  import { gsap } from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    const tl = gsap.timeline({ defaults: { ease: "expo.out" } });

    // Set initial states
    gsap.set(".behind-text h1", { opacity: 0, scale: 1.1 });
    gsap.set(".logo-corner", { opacity: 0, scale: 0.8 });
    gsap.set("#hero-headline", { opacity: 0, y: 50 });
    gsap.set("#hero-subheadline", { opacity: 0, y: 30 });
    gsap.set("#hero-cta", { opacity: 0, y: 30 });

    // Animation sequence
    tl.to(".behind-text h1", {
      opacity: 1,
      scale: 1,
      duration: 1.5,
    })
      .to(
        ".logo-corner",
        {
          opacity: 1,
          scale: 1,
          duration: 1,
        },
        "-=1",
      )
      .to(
        "#hero-headline",
        {
          opacity: 1,
          y: 0,
          duration: 1,
        },
        "-=0.8",
      )
      .to(
        "#hero-subheadline",
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
        },
        "-=0.6",
      )
      .to(
        "#hero-cta",
        {
          opacity: 1,
          y: 0,
          duration: 0.6,
        },
        "-=0.4",
      );
  });
</script>
